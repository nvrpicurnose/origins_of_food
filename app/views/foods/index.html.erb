<body>

<div id='indexlist'>
	<% @foodlist.each do |food| %>
		<%= link_to food.name, food_path(:id=>food.id), {:style=>'color:#E6B800; text-shadow: -1px 0 #470047, 0 1px #470047, 1px 0 #470047, 0 -1px #470047; text-decoration:none; font-weight: bold; font-size: 12px;', :class=>'css_class'} %>
	<% end %>
</div>

<div class='about'>
	<h3 style='margin-left:60px; margin-top: 1px; color: white;'><%= link_to "About", about_path(:controller=>'foods', :action=>'about'), {:style=>'color:black; text-decoration:none; font-weight: bold;', :class=>'css_class'} %></h3>
</div>

<div id='indexbox'>
	<% @foods.each do |food| %>
		<div class='indexicon'>
			<%= link_to image_tag(food.icon1(:thumb)), food_path(:id=>food.id) %>
		</div>
	<% end %>
</div>
<div style='margin-left: 25px; margin-top: -10px; position: absolute;'><%= link_to("Add Food", new_food_path) %></div>

</body>
